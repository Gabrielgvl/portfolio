---
import Layout from '@/layouts/Layout.astro';
import { getLocaleFromUrl, useTranslations } from '@/i18n/utils';
import SectionHeader from '@/components/ui/SectionHeader.astro';
import EmailIcon from '../components/icons/EmailIcon.astro';
import LinkedInIcon from '../components/icons/LinkedInIcon.astro';
import GitHubIcon from '../components/icons/GitHubIcon.astro';
import WhatsAppIcon from '../components/icons/WhatsAppIcon.astro';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const title = t('contact.meta.title');

const contactOptions = [
  {
    title: t('footer.email'),
    value: 'gabriel@delima.net.br',
    href: 'mailto:gabriel@delima.net.br',
    icon: EmailIcon,
  },
  {
    title: t('footer.linkedin'),
    value: 'linkedin.com/in/gabriel-vinhaes',
    href: 'https://linkedin.com/in/gabriel-vinhaes',
    icon: LinkedInIcon,
  },
  {
    title: t('footer.whatsapp'),
    value: '+55 61 99171-6125',
    href: 'https://wa.me/5561991716125?text=Ol%C3%A1%2C%20vi%20seu%20site%20e%20gostaria%20de%20conversar',
    icon: WhatsAppIcon,
  },
  {
    title: t('footer.github'),
    value: 'github.com/Gabrielgvl',
    href: 'https://github.com/Gabrielgvl',
    icon: GitHubIcon,
  },
];
---

<Layout title={title}>
  <div class="container mx-auto px-4 py-8">
    
    <section>
      <SectionHeader
        eyebrow={t('nav.contact')}
        title={t('contact.hero.title')}
        description={t('contact.hero.description')}
        align="center"
      />
      <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
            {contactOptions.map((option) => (
              <a
                href={option.href}
                target="_blank"
                rel="noopener noreferrer"
                class="flex flex-col items-center p-6 bg-white dark:bg-slate-900 rounded-lg shadow-sm hover:shadow-md transition-shadow"
              >
                <option.icon class="w-8 h-8 text-accent-500 mb-4" />
                <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-2">
                  {option.title}
                </h3>
                <p class="text-slate-600 dark:text-slate-400 text-center">{option.value}</p>
              </a>
            ))}
          </div>

          <form class="space-y-6" action="#" method="POST">
            <div>
              <label for="name" class="block text-sm font-medium text-slate-700 dark:text-slate-300">
                {t('form.name')}
              </label>
              <input
                type="text"
                name="name"
                id="name"
                required
                class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-accent-400 focus:ring-accent-400 dark:border-slate-700 dark:bg-slate-900 dark:text-white sm:text-sm"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-slate-700 dark:text-slate-300">
                {t('form.email')}
              </label>
              <input
                type="email"
                name="email"
                id="email"
                required
                class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-accent-400 focus:ring-accent-400 dark:border-slate-700 dark:bg-slate-900 dark:text-white sm:text-sm"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-slate-700 dark:text-slate-300">
                {t('form.message')}
              </label>
              <textarea
                name="message"
                id="message"
                rows="4"
                required
                class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-accent-400 focus:ring-accent-400 dark:border-slate-700 dark:bg-slate-900 dark:text-white sm:text-sm"
              ></textarea>
            </div>

            <div>
              <button
                type="submit"
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-slate-950 bg-accent-500 hover:bg-accent-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-400"
              >
                {t('form.submit')}
              </button>
            </div>
          </form>

          <div class="mt-12 bg-slate-50 dark:bg-slate-900 rounded-lg p-6">
            <h2 class="text-lg font-medium text-slate-900 dark:text-white mb-4">
              {t('form.availability.title')}
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-2">
              {t('form.availability.description')}
            </p>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
              {t('form.availability.services')}
            </p>
            <p class="text-sm text-slate-500 dark:text-slate-500">
              {t('form.availability.response_time')}
            </p>
        </div>
      </div>
    </section>
  </div>
</Layout>
