---
interface Props {
  eyebrow: string;
  title: string;
  description?: string;
  align?: 'left' | 'center';
}

const { eyebrow, title, description, align = 'left' } = Astro.props;
const alignment = align === 'center' ? 'text-center items-center' : 'text-left items-start';
---

<div class={`section-header flex flex-col gap-4 ${alignment}`}>
  <span class="text-xs font-semibold uppercase tracking-[0.3em] text-accent-500 dark:text-accent-400">
    {eyebrow}
  </span>
  <h2 class="text-3xl md:text-4xl font-semibold text-slate-900 dark:text-slate-100">
    {title}
  </h2>
  {description ? (
    <p class="max-w-2xl text-base md:text-lg text-slate-600 dark:text-slate-400">
      {description}
    </p>
  ) : null}
</div>
