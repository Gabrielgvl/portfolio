---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { format } from 'date-fns';
import { enUS, es, ptBR } from 'date-fns/locale';
import { Image } from 'astro:assets';
import avatarImage from '../../assets/avatar.png';
import { render } from 'astro:content';
import { getLocaleFromUrl, useTranslations, useTranslatedPath } from '@/i18n/utils';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const l = useTranslatedPath(locale);
const dateLocale = locale === 'pt' ? ptBR : locale === 'es' ? es : enUS;

export type BlogPost = CollectionEntry<'blog'>;

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ id }) => {
    const [slug, localeFile] = id.split('/');
    return localeFile === 'en';
  });
  
  return posts.map((post: BlogPost) => ({
    params: { slug: post.id.split('/').at(0) },
    props: { post },
  }));
}
type Props = {
  post: BlogPost;
};

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title={post.data.title} description={post.data.description}>
  <article class="container mx-auto px-4 py-16">
    <header class="max-w-4xl mx-auto mb-16">
      <div class="flex items-center text-sm text-slate-500 dark:text-slate-400 mb-4">
        <span>
          {t('blog.posts.published_on')}{' '}
          {format(post.data.publishDate, 'dd MMMM, yyyy', { locale: dateLocale })}
        </span>
        <span class="mx-2">â€¢</span>
        <span>{post.data.category}</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-8">
        {post.data.title}
      </h1>
      <div class="flex items-center space-x-4">
        <Image
          src={avatarImage}
          alt={post.data.author}
          class="object-cover w-12 h-12 rounded-full"
        />
        <div>
          <div class="font-medium text-slate-900 dark:text-white">
            {post.data.author}
          </div>
        </div>
      </div>
    </header>

    <div class="prose prose-lg dark:prose-invert max-w-4xl mx-auto">
      <Content />
    </div>

    <footer class="max-w-4xl mx-auto mt-16 pt-8 border-t border-slate-200 dark:border-slate-700">
      <div class="flex flex-wrap gap-2">
        {
          post.data.tags.map((tag: string) => (
            <a
              href={l(`/blog/tag/${tag.toLowerCase()}`)}
              class="px-3 py-1 text-sm bg-accent-400/10 text-accent-600 dark:text-accent-300 rounded-full hover:bg-accent-400/20 transition-colors"
            >
              {tag}
            </a>
          ))
        }
      </div>
    </footer>
  </article>
</Layout>

<style is:global>
  .prose img {
    @apply rounded-lg shadow-lg;
  }

  .prose pre {
    @apply rounded-lg shadow-lg;
  }

  .prose code {
    @apply text-accent-500 dark:text-accent-400;
  }

  .prose a {
    @apply text-accent-500 dark:text-accent-400 no-underline hover:underline;
  }

  .prose h2,
  .prose h3,
  .prose h4 {
    @apply text-slate-900 dark:text-white scroll-mt-20;
  }

  .prose p,
  .prose ul,
  .prose ol {
    @apply text-slate-600 dark:text-slate-400;
  }

  .prose strong {
    @apply text-slate-900 dark:text-white;
  }

  .prose blockquote {
    @apply border-l-4 border-accent-400;
  }

  .prose blockquote p {
    @apply text-slate-700 dark:text-slate-300;
  }
</style>
