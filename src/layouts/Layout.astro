---
import '../styles/global.css';
import { getLocaleFromUrl, useTranslations } from '../i18n/utils';
import { defaultLang, routes, showDefaultLang } from '../i18n/ui';
import Navigation from '@/components/Navigation.astro';
import EmailIcon from '@/components/icons/EmailIcon.astro';
import LinkedInIcon from '@/components/icons/LinkedInIcon.astro';
import GitHubIcon from '@/components/icons/GitHubIcon.astro';
import WhatsAppIcon from '@/components/icons/WhatsAppIcon.astro';

interface Props {
  title: string;
  description?: string;
}

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const { title, description = t('description') } = Astro.props;
const whatsappLink =
  'https://wa.me/5561991716125?text=Ol%C3%A1%2C%20vi%20seu%20site%20e%20gostaria%20de%20conversar';
const contactEmail = 'gabriel@delima.net.br';
const contactPhone = '+55 61 99171-6125';
const linkedInLink = 'https://linkedin.com/in/gabriel-vinhaes';
const githubLink = 'https://github.com/Gabrielgvl';
const site = Astro.site ?? new URL('https://gabriel.delima.net.br');
const hrefLangMap = {
  en: 'en',
  pt: 'pt-BR',
  es: 'es',
} as const;
const localeKeys = Object.keys(routes) as Array<keyof typeof routes>;

const pathname = Astro.url.pathname;
const segments = pathname.split('/').filter(Boolean);
const hasLocalePrefix = localeKeys.includes(segments[0] as keyof typeof routes);
const pathSegments = hasLocalePrefix ? segments.slice(1) : segments;
const baseSegment = pathSegments[0] ?? '';
const restSegments = pathSegments.slice(1);

const baseKey =
  baseSegment === ''
    ? ''
    : (Object.entries(routes[locale]).find(([, value]) => value === baseSegment)?.[0] ??
        Object.entries(routes[defaultLang]).find(([, value]) => value === baseSegment)?.[0] ??
        baseSegment);

const buildLocalizedPath = (targetLocale: keyof typeof routes) => {
  const routeBase =
    baseKey && routes[targetLocale][baseKey as keyof typeof routes.en] !== undefined
      ? routes[targetLocale][baseKey as keyof typeof routes.en]
      : baseSegment;
  const localizedBase = baseKey ? routeBase : '';
  const rest = restSegments.length ? `/${restSegments.join('/')}` : '';
  const path = localizedBase ? `/${localizedBase}${rest}` : rest || '/';
  return showDefaultLang || targetLocale !== defaultLang ? `/${targetLocale}${path}` : path;
};

const canonicalPath = buildLocalizedPath(locale);
const canonicalUrl = new URL(canonicalPath, site);
const alternateUrls = localeKeys.map((localeKey) => ({
  locale: localeKey,
  url: new URL(buildLocalizedPath(localeKey), site),
}));
const xDefaultUrl = new URL(buildLocalizedPath(defaultLang), site);
const personJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Gabriel Vinhaes de Lima',
  url: canonicalUrl.toString(),
  jobTitle: t('meta.role'),
  email: contactEmail,
  telephone: contactPhone,
  sameAs: [linkedInLink, githubLink],
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Brasilia',
    addressRegion: 'DF',
    addressCountry: 'BR',
  },
};
const serviceJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: t('meta.service'),
  description,
  url: canonicalUrl.toString(),
  areaServed: 'BR',
  founder: {
    '@type': 'Person',
    name: 'Gabriel Vinhaes de Lima',
  },
  sameAs: [linkedInLink, githubLink],
  contactPoint: {
    '@type': 'ContactPoint',
    telephone: contactPhone,
    email: contactEmail,
    contactType: 'sales',
  },
};
const structuredData = JSON.stringify([personJsonLd, serviceJsonLd]);
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" sizes="any" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl.toString()} />
    <link rel="alternate" hrefLang="x-default" href={xDefaultUrl.toString()} />
    {alternateUrls.map(({ locale: localeKey, url }) => (
      <link
        rel="alternate"
        hrefLang={hrefLangMap[localeKey] ?? localeKey}
        href={url.toString()}
      />
    ))}
    <script type="application/ld+json" is:inline set:html={structuredData} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;500;600;700&family=IBM+Plex+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      const storedTheme = localStorage.getItem('color-theme');
      if (storedTheme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="bg-slate-50 text-slate-900 dark:bg-midnight-950 dark:text-slate-100">
    <header
      class="fixed w-full bg-white/75 dark:bg-midnight-950/80 backdrop-blur-sm z-50 border-b border-slate-200/60 dark:border-slate-800/70"
    >
      <div class="container mx-auto px-4">
        <Navigation />
      </div>
    </header>

    <main class="pt-16">
      <slot />
    </main>

    <footer class="bg-white dark:bg-midnight-950 border-t border-slate-200/60 dark:border-slate-800/70">
      <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <div class="flex items-center gap-3 text-slate-600 dark:text-slate-400">
            <span class="h-8 w-8 rounded-full bg-slate-100/80 dark:bg-midnight-900/80 ring-1 ring-slate-200/70 dark:ring-slate-700/60 flex items-center justify-center overflow-hidden p-0.5">
              <img
                src="/logos/gvl-logo.png"
                alt="Gabriel Vinhaes de Lima logo"
                class="h-full w-full object-contain"
              />
            </span>
            <span>
              Â© {new Date().getFullYear()}
              {t('footer.copyright')}
            </span>
          </div>
          <div class="flex flex-wrap items-center gap-4">
            <a
              href={`mailto:${contactEmail}`}
              class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-accent-500"
            >
              <EmailIcon class="h-4 w-4" />
              {t('footer.email')}
            </a>
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-accent-500"
            >
              <WhatsAppIcon class="h-4 w-4" />
              {t('footer.whatsapp')}
            </a>
            <a
              href={linkedInLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-accent-500"
            >
              <LinkedInIcon class="h-4 w-4" />
              {t('footer.linkedin')}
            </a>
            <a
              href={githubLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-accent-500"
            >
              <GitHubIcon class="h-4 w-4" />
              {t('footer.github')}
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
