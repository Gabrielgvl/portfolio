---
import Button from '@/components/ui/Button.astro';
import WhatsAppIcon from '@/components/icons/WhatsAppIcon.astro';

interface Props {
  t: (key: string) => string;
  primaryHref: string;
  secondaryHref: string;
}

const { t, primaryHref, secondaryHref } = Astro.props;

const trustItems = [t('cta.trust.response'), t('cta.trust.no_commitment')];
---

<section id="contact" class="py-20">
  <div class="container mx-auto px-4">
    <div class="glass-surface rounded-3xl p-10 border border-slate-800/70 text-center">
      <h2 class="text-3xl md:text-4xl font-semibold text-slate-900 dark:text-slate-100">
        {t('cta.title')}
      </h2>
      <p class="mt-4 text-base md:text-lg text-slate-600 dark:text-slate-400">
        {t('cta.description')}
      </p>

      <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
        <Button href={primaryHref} variant="primary" size="lg">
          <WhatsAppIcon class="h-4 w-4" />
          {t('cta.primary')}
        </Button>
        <Button href={secondaryHref} variant="secondary" size="lg">
          {t('cta.secondary')}
        </Button>
      </div>

      <p class="mt-4 text-sm text-slate-500 dark:text-slate-400">
        {t('cta.email_label')}{' '}
        <a href={secondaryHref} class="text-accent-500 hover:text-accent-400">
          {t('cta.email_address')}
        </a>
      </p>

      <div class="mt-6 flex flex-wrap items-center justify-center gap-4 text-xs uppercase tracking-[0.3em] text-slate-500">
        {trustItems.map((item) => (
          <span>{item}</span>
        ))}
      </div>
    </div>
  </div>
</section>
