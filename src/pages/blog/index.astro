---
import Layout from '@/layouts/Layout.astro';
import SectionHeader from '@/components/ui/SectionHeader.astro';
import { format } from 'date-fns';
import { enUS, es, ptBR } from 'date-fns/locale';
import { Image } from 'astro:assets';
import avatarImage from '../../assets/avatar.png';
import { getCollection, type CollectionEntry } from 'astro:content';
import { getLocaleFromUrl, useTranslations, useTranslatedPath } from '@/i18n/utils';

type BlogPost = CollectionEntry<'blog'>;

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const translatePath = useTranslatedPath(locale);
const title = t('blog.meta.title');
const dateLocale = locale === 'pt' ? ptBR : locale === 'es' ? es : enUS;

// Get blog posts for the current locale
const allPosts = await getCollection('blog', ({ id }) => {
  const [slug, localeFile] = id.split('/');
  return localeFile === locale;
});

const sortedPosts = allPosts.sort(
  (a: BlogPost, b: BlogPost) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const categories = [...new Set(allPosts.map((post: BlogPost) => post.data.category))] as string[];
const tags = [...new Set(allPosts.flatMap((post: BlogPost) => post.data.tags))] as string[];
---

<Layout title={title} description={t('blog.meta.description')}>
  <div class="container mx-auto px-4 py-8">
    <SectionHeader
      eyebrow={t('nav.blog')}
      title={t('blog.hero.title')}
      description={t('blog.hero.description')}
      align="center"
    />

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Sidebar -->
      <aside class="lg:col-span-1">
        <div class="sticky top-24">
          <div class="bg-white dark:bg-slate-900 rounded-lg shadow-lg p-6 mb-8">
            <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
              {t('blog.categories.title')}
            </h2>
            <ul class="space-y-2">
              {categories.map((category) => (
                <li>
                  <a
                    href={translatePath(`/blog/categoria/${category.toLowerCase()}`)}
                    class="text-slate-600 hover:text-accent-500 dark:text-slate-400 dark:hover:text-accent-400"
                  >
                    {category}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <div class="bg-white dark:bg-slate-900 rounded-lg shadow-lg p-6">
            <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
              {t('blog.tags.title')}
            </h2>
            <div class="flex flex-wrap gap-2">
              {tags.map((tag) => (
                <a
                  href={translatePath(`/blog/tag/${tag.toLowerCase()}`)}
                  class="px-3 py-1 text-sm bg-accent-400/10 text-accent-600 dark:text-accent-300 rounded-full hover:bg-accent-400/20 transition-colors"
                >
                  {tag}
                </a>
              ))}
            </div>
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="lg:col-span-3">
        <div class="space-y-8">
          {sortedPosts.map((post: BlogPost) => {
            const [slug] = post.id.split('/');
            return (
              <article class="bg-white dark:bg-slate-900 rounded-lg shadow-lg overflow-hidden">
                <div class="p-6">
                  <div class="flex items-center text-sm text-slate-500 dark:text-slate-400 mb-2">
                    <span>
                      {t('blog.posts.published_on')}{' '}
                      {format(post.data.publishDate, 'dd MMMM, yyyy', { locale: dateLocale })}
                    </span>
                    <span class="mx-2">•</span>
                    <span>{post.data.category}</span>
                  </div>
                  <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">
                    <a
                      href={translatePath(`/blog/${slug}`)}
                      class="hover:text-accent-500 dark:hover:text-accent-400"
                    >
                      {post.data.title}
                    </a>
                  </h2>
                  <p class="text-slate-600 dark:text-slate-400 mb-4">{post.data.description}</p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                      <Image
                        src={avatarImage}
                        alt={post.data.author}
                        class="object-cover w-10 h-10 rounded-full"
                      />
                      <span class="text-sm text-slate-600 dark:text-slate-400">
                        {post.data.author}
                      </span>
                    </div>
                    <a
                      href={translatePath(`/blog/${slug}`)}
                      class="text-accent-500 hover:text-accent-600 dark:text-accent-400 font-medium"
                    >
                      {t('blog.posts.read_more')} →
                    </a>
                  </div>
                </div>
              </article>
            );
          })}
        </div>
      </main>
    </div>
  </div>
</Layout>
