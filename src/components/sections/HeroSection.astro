---
import Badge from '@/components/ui/Badge.astro';
import Button from '@/components/ui/Button.astro';
import WhatsAppIcon from '@/components/icons/WhatsAppIcon.astro';

interface Props {
  t: (key: string) => string;
  primaryHref: string;
  secondaryHref: string;
}

const { t, primaryHref, secondaryHref } = Astro.props;

const logos = [
  { src: '/logos/courier.svg', alt: 'Courier' },
  { src: '/logos/mercado-livre.svg', alt: 'Mercado Livre' },
  { src: '/logos/varsity-tutors.svg', alt: 'Varsity Tutors' },
  { src: '/logos/ambev-tech.svg', alt: 'Ambev Tech' },
];
---

<section id="home" class="relative overflow-hidden">
  <div class="absolute inset-0 bg-grid opacity-40"></div>
  <div class="absolute -top-40 -right-40 h-72 w-72 orb animate-float-slow"></div>
  <div class="absolute -bottom-32 -left-32 h-96 w-96 orb animate-float-slow" style="animation-delay: -2s;"></div>

  <div class="relative container mx-auto px-4 py-24 md:py-32">
    <div class="max-w-3xl">
      <Badge tone="accent" class="hero-badge">
        <span class="h-2 w-2 rounded-full bg-accent-400 animate-pulse-soft"></span>
        {t('hero.badge')}
      </Badge>

      <h1 class="hero-headline mt-6 text-4xl md:text-6xl font-semibold leading-tight text-slate-900 dark:text-slate-100">
        {t('hero.title')}
        <span class="block text-gradient headline-glow bg-[length:200%_200%] animate-gradient-shift">
          {t('hero.title_highlight')}
        </span>
      </h1>

      <p class="mt-6 text-lg md:text-xl text-slate-600 dark:text-slate-400">
        {t('hero.subtitle')}
      </p>

      <div class="hero-ctas mt-8 flex flex-col sm:flex-row gap-4">
        <Button href={primaryHref} variant="primary" size="lg" class="justify-center">
          <WhatsAppIcon class="h-4 w-4" />
          {t('hero.cta_primary')}
          <span class="text-xs font-semibold text-slate-900/70">{t('hero.cta_primary_note')}</span>
        </Button>
        <Button href={secondaryHref} variant="secondary" size="lg" class="justify-center">
          {t('hero.cta_secondary')}
        </Button>
      </div>
    </div>

    <div class="mt-12 flex flex-wrap items-center gap-6 text-slate-500 dark:text-slate-400">
      <span class="text-xs uppercase tracking-[0.3em] text-slate-500">
        {t('hero.trusted_by')}
      </span>
      <div class="flex flex-wrap items-center gap-6">
        {logos.map((logo) => (
          <img
            src={logo.src}
            alt={logo.alt}
            class="company-logo h-6 opacity-60 transition-opacity"
            loading="lazy"
          />
        ))}
      </div>
    </div>
  </div>
</section>
