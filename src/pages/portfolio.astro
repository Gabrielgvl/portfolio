---
import Layout from '@/layouts/Layout.astro';
import { getLocaleFromUrl, useTranslations, useTranslatedPath } from '@/i18n/utils';
import { Image } from 'astro:assets';
import mercadoEnvios from '../assets/portfolio/mercado-envios.png';
import erp from '../assets/portfolio/erp-giga.png';
import iot from '../assets/portfolio/iot.png';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const translatePath = useTranslatedPath(locale);

const projects = [
  {
    title: t('projects.mercadoenvios.title'),
    description: t('projects.mercadoenvios.description'),
    image: mercadoEnvios,
    technologies: ['Go', 'AWS', 'Kubernetes', 'Machine Learning'],
    link: '#',
  },
  {
    title: t('projects.erp.title'),
    description: t('projects.erp.description'),
    image: erp,
    technologies: ['React', 'Node.js', 'PostgreSQL', 'Docker'],
    link: '#',
  },
  {
    title: t('projects.iot.title'),
    description: t('projects.iot.description'),
    image: iot,
    technologies: ['Python', 'MQTT', 'InfluxDB', 'Grafana'],
    link: '#',
  },
];
---

<Layout
  title={t('meta.title')}
  description={t('meta.description')}
>
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
            {t('hero.title')}
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            {t('hero.description')}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {projects.map((project) => (
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
              <Image
                src={project.image}
                alt={project.title}
                class="w-full h-48 object-cover"
                width={800}
                height={400}
              />
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                  {project.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 mb-4">{project.description}</p>
                <div class="mb-4">
                  <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    {t('projects.technologies')}
                  </h4>
                  <div class="flex flex-wrap gap-2">
                    {project.technologies.map((tech) => (
                      <span class="px-2 py-1 text-sm bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
                <a
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
                >
                  {t('projects.view_project')} â†’
                </a>
              </div>
            </div>
          ))}
        </div>

        <div class="text-center mt-12">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
            {t('cta.title')}
          </h2>
          <a
            href={translatePath('contact')}
            class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 dark:bg-primary-500 dark:hover:bg-primary-600"
          >
            {t('cta.button')}
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
