---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import { t, l } from 'astro-i18n';

// Force server-side rendering for this page
export const prerender = false;

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Gabriel Lima | Desenvolvedor Full Stack & Consultor de Software</title>
  </head>

  <body>
    <Layout
      title={t('meta.title')}
      description={t('meta.description')}
    >
      <!-- Hero Section -->
      <section
        class="relative h-screen flex items-center justify-center bg-gradient-to-br from-primary-50 to-primary-100 dark:from-gray-900 dark:to-gray-800"
      >
        <div class="container mx-auto px-4 text-center">
          <h1 class="text-5xl md:text-7xl font-bold text-gray-900 dark:text-white mb-6">
            {t('hero.title')}
            <span class="text-primary-600 dark:text-primary-400">{t('hero.title_highlight')}</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 mb-8 max-w-3xl mx-auto">
            {t('hero.description')}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={l('/contact')}
              class="inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 transition-colors"
            >
              {t('cta.start')}
            </a>
            <a
              href={l('/portfolio')}
              class="inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg text-primary-600 bg-white hover:bg-gray-50 transition-colors"
            >
              {t('cta.portfolio')}
            </a>
          </div>
        </div>
      </section>

      <!-- ServiÃ§os -->
      <section class="py-20 bg-white dark:bg-gray-900">
        <div class="container mx-auto px-4">
          <h2
            class="text-3xl md:text-4xl font-bold text-center text-gray-900 dark:text-white mb-12"
          >
            {t('services.title')}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg">
              <div
                class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center mb-4"
              >
                <svg
                  class="w-6 h-6 text-primary-600 dark:text-primary-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {t('services.fullstack.title')}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                {t('services.fullstack.description')}
              </p>
            </div>
            <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg">
              <div
                class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center mb-4"
              >
                <svg
                  class="w-6 h-6 text-primary-600 dark:text-primary-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                  ></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {t('services.consulting.title')}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                {t('services.consulting.description')}
              </p>
            </div>
            <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg">
              <div
                class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center mb-4"
              >
                <svg
                  class="w-6 h-6 text-primary-600 dark:text-primary-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {t('services.optimization.title')}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                {t('services.optimization.description')}
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA -->
      <section class="py-20 bg-primary-600 dark:bg-primary-900">
        <div class="container mx-auto px-4 text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">
            {t('cta.title')}
          </h2>
          <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
            {t('cta.description')}
          </p>
          <a
            href={l('/contact')}
            class="inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg text-primary-600 bg-white hover:bg-gray-50 transition-colors"
          >
            {t('cta.button')}
          </a>
        </div>
      </section>
    </Layout>
  </body>
</html>
