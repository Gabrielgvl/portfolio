---
import Layout from '@/layouts/Layout.astro';
import SectionHeader from '@/components/ui/SectionHeader.astro';
import { getLocaleFromUrl, useTranslations } from '@/i18n/utils';
import { Image } from 'astro:assets';
import profileImage from '../assets/profile.png';
import { getCollection } from 'astro:content';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const title = t('about.meta.title');

// Get data from collections based on locale
const skillsEntry = (await getCollection('skills', ({ id }) => id.split('/').at(0) === locale)).at(0);
const experiencesEntry = (await getCollection('experiences', ({ id }) => id.split('/').at(0) === locale)).at(0);
const educationEntry = (await getCollection('education', ({ id }) => id.split('/').at(0) === locale)).at(0);
const certificationsEntry = (await getCollection('certifications', ({ id }) => id.split('/').at(0) === locale)).at(0);

const skills = skillsEntry?.data || {
  languages: [],
  frontend: [],
  backend: [],
  cloud: [],
};
const experiences = experiencesEntry?.data || [];
const education = educationEntry?.data || [];
const certifications = certificationsEntry?.data || [];
---

<Layout title={title}>
  <div class="container mx-auto px-4 py-8">
    <section>
      <div class="container mx-auto px-4">
        <SectionHeader
          eyebrow={t('about.section_label')}
          title={t('about.hero.title')}
          description={t('about.hero.description')}
          align="center"
        />

        <div class="max-w-4xl mx-auto">
          <div class="flex justify-center mb-16">
            <div class="w-48 h-48 rounded-full overflow-hidden shadow-lg">
              <Image
                src={profileImage}
                alt={t('about.photo_alt')}
                class="w-full h-full object-cover"
                width={800}
                height={800}
              />
            </div>
          </div>

          <div class="mb-16">
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">
              {t('experience.title')}
            </h2>
            <div class="space-y-8">
              {experiences.map((exp) => (
                <div class="border-l-4 border-accent-400 pl-4">
                  <h3 class="text-xl font-semibold text-slate-900 dark:text-white">{exp.title}</h3>
                  <p class="text-lg text-slate-700 dark:text-slate-300">{exp.company}</p>
                  <p class="text-slate-600 dark:text-slate-400">{exp.period}</p>
                  <p class="mt-2 text-slate-600 dark:text-slate-400">{exp.description}</p>
                  <ul class="mt-4 list-disc list-inside text-slate-600 dark:text-slate-400">
                    {exp.achievements.map((achievement: string) => (
                      <li>{achievement}</li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>

          <div class="mb-16">
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">
              {t('skills.title')}
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div>
                <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
                  {t('skills.languages')}
                </h3>
                <ul class="list-disc list-inside text-slate-600 dark:text-slate-400">
                  {skills.languages.map((skill: string) => (
                    <li>{skill}</li>
                  ))}
                </ul>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
                  {t('skills.frontend')}
                </h3>
                <ul class="list-disc list-inside text-slate-600 dark:text-slate-400">
                  {skills.frontend.map((skill: string) => (
                    <li>{skill}</li>
                  ))}
                </ul>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
                  {t('skills.backend')}
                </h3>
                <ul class="list-disc list-inside text-slate-600 dark:text-slate-400">
                  {skills.backend.map((skill: string) => (
                    <li>{skill}</li>
                  ))}
                </ul>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
                  {t('skills.cloud')}
                </h3>
                <ul class="list-disc list-inside text-slate-600 dark:text-slate-400">
                  {skills.cloud.map((skill: string) => (
                    <li>{skill}</li>
                  ))}
                </ul>
              </div>
            </div>
          </div>

          <div class="mb-16">
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">
              {t('education.title')}
            </h2>
            <div class="space-y-8">
              {education.map((edu) => (
                <div>
                  <h3 class="text-lg font-semibold text-slate-900 dark:text-white">
                    {edu.degree}
                  </h3>
                  <p class="text-slate-600 dark:text-slate-400">{edu.institution}</p>
                  <p class="text-slate-500 dark:text-slate-500">{edu.year}</p>
                </div>
              ))}
            </div>
          </div>

          <div class="mb-16">
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">
              {t('certifications.title')}
            </h2>
            <div class="space-y-4">
              {certifications.map((cert) => (
                <div>
                  <h3 class="text-lg font-semibold text-slate-900 dark:text-white">
                    {cert.name}
                  </h3>
                  <p class="text-slate-600 dark:text-slate-400">{cert.issuer}</p>
                  <p class="text-slate-500 dark:text-slate-500">{cert.year}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
