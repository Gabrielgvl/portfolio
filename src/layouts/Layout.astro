---
import '../styles/global.css';
import { getLocaleFromUrl, useTranslations } from '../i18n/utils';
import Navigation from '@/components/Navigation.astro';
import EmailIcon from '@/components/icons/EmailIcon.astro';
import LinkedInIcon from '@/components/icons/LinkedInIcon.astro';
import GitHubIcon from '@/components/icons/GitHubIcon.astro';
import WhatsAppIcon from '@/components/icons/WhatsAppIcon.astro';

interface Props {
  title: string;
  description?: string;
}

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const { title, description = t('description') } = Astro.props;
const whatsappLink =
  'https://wa.me/5561991716125?text=Ol%C3%A1%2C%20vi%20seu%20site%20e%20gostaria%20de%20conversar';
const githubLink = 'https://github.com/Gabrielgvl';
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;500;600;700&family=IBM+Plex+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      const storedTheme = localStorage.getItem('color-theme');
      if (storedTheme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="bg-slate-50 text-slate-900 dark:bg-midnight-950 dark:text-slate-100">
    <header
      class="fixed w-full bg-white/75 dark:bg-midnight-950/80 backdrop-blur-sm z-50 border-b border-slate-200/60 dark:border-slate-800/70"
    >
      <div class="container mx-auto px-4">
        <Navigation />
      </div>
    </header>

    <main class="pt-16">
      <slot />
    </main>

    <footer class="bg-white dark:bg-midnight-950 border-t border-slate-200/60 dark:border-slate-800/70">
      <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="text-slate-600 dark:text-slate-400 mb-4 md:mb-0">
            Â© {new Date().getFullYear()}
            {t('footer.copyright')}
          </div>
          <div class="flex flex-wrap items-center gap-4">
            <a
              href="mailto:gabriel@delima.net.br"
              class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-accent-500"
            >
              <EmailIcon class="h-4 w-4" />
              {t('footer.email')}
            </a>
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-accent-500"
            >
              <WhatsAppIcon class="h-4 w-4" />
              {t('footer.whatsapp')}
            </a>
            <a
              href="https://linkedin.com/in/gabriel-vinhaes"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-accent-500"
            >
              <LinkedInIcon class="h-4 w-4" />
              {t('footer.linkedin')}
            </a>
            <a
              href={githubLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-accent-500"
            >
              <GitHubIcon class="h-4 w-4" />
              {t('footer.github')}
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
