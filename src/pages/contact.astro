---
import Layout from '../layouts/Layout.astro';
import { t } from 'astro-i18n';
import EmailIcon from '../components/icons/EmailIcon.astro';
import LinkedInIcon from '../components/icons/LinkedInIcon.astro';
import GitHubIcon from '../components/icons/GitHubIcon.astro';

const contactOptions = [
  {
    title: 'Email',
    value: 'gvl_br@yahoo.com.br',
    href: 'mailto:gvl_br@yahoo.com.br',
    icon: EmailIcon,
  },
  {
    title: 'LinkedIn',
    value: 'linkedin.com/in/gabriel-vinhaes',
    href: 'https://linkedin.com/in/gabriel-vinhaes',
    icon: LinkedInIcon,
  },
  {
    title: 'GitHub',
    value: 'github.com/Gabrielgvl',
    href: 'https://github.com/Gabrielgvl',
    icon: GitHubIcon,
  },
];
---

<Layout title={t('meta.title')}>
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        {t('hero.title')}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-12 text-center max-w-2xl mx-auto">
        {t('hero.description')}
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          contactOptions.map((option) => (
            <a
              href={option.href}
              target={option.href.startsWith('http') ? '_blank' : undefined}
              rel={option.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 flex flex-col items-center text-center transition-transform hover:scale-105"
            >
              <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center mb-4 text-primary-600 dark:text-primary-400">
                <option.icon class="w-6 h-6" />
              </div>
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {option.title}
              </h2>
              <p class="text-gray-600 dark:text-gray-400">{option.value}</p>
            </a>
          ))
        }
      </div>

      <div class="mt-16 bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">
          {t('form.availability.title')}
        </h2>
        <p class="text-gray-600 dark:text-gray-400 mb-4">{t('form.availability.description')}</p>
        <ul class="list-disc list-inside space-y-2 text-gray-600 dark:text-gray-400 mb-6">
          {t('form.availability.services').split(',').map((service) => (
            <li>{service.trim()}</li>
          ))}
        </ul>
        <p class="text-gray-600 dark:text-gray-400">
          {t('form.availability.response_time')}
        </p>
      </div>
    </div>
  </div>
</Layout>
